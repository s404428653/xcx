/* components/goodsBox/goodsBox.wxss */

.box {
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
  border: 2rpx solid rgba(0, 0, 0, 0.16);
  overflow: hidden;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.hor-line {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
/*商品图片*/
.goods-img {
  width: 320rpx;
  height: 320rpx;
}

/*购物车icon*/

.car-icon {
  width: 28rpx;
  height: 28rpx;
}

/*文本行*/

.txt-line {
  margin-top: 6rpx;
  margin-left: 16rpx;
  justify-content: flex-start;
}

/*类别*/

.tag {
  font-size: 20rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 26rpx;
  color: #ef2323;
  word-break:break-all;
}

/*名称*/

.name {
  font-size: 20rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 26rpx;
  color: rgba(51, 51, 51, 1);
}

/*价格行*/

.price-line {
  padding: 4rpx 16rpx;
  justify-content: space-between;
}

/*价格*/

.price {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 26rpx;
  color: #ef2323;
}

/*促销图标*/
.tag-sale{
  position: absolute;
  top: 0;
  left: 0;
  width: 56rpx;
  height: 42rpx;
}

/*活动等文字*/
.tag-sale text{
  position: absolute;
  top: 0;
  left: 4rpx;
  font-size: 24rpx;
  color: white;
}