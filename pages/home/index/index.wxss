.panel-img {
  width: 670rpx;
  height: 170rpx;
  margin: 20rpx auto;
}

/*功能区*/

.panel-menu {
  width: 690rpx;
  margin: 0rpx auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  background: #fff;
  box-shadow: 0px 10rpx 30rpx rgba(0, 0, 0, 0.12);
  border-radius: 8rpx;
  padding-bottom: 40rpx;
}

.mine-line-menu {
  border-radius: 8rpx;
  position: relative;
  z-index: 2;
  width: 690rpx;
  margin: 36rpx auto 40rpx;
  padding: 44rpx 0;
  background: linear-gradient(to bottom, #565862 0%, #484b55, #2c323a 100%);
}

/*功能按钮*/

.menu-icon {
  width: 84rpx;
  height: 84rpx;
  background: #27282f;
  border-radius: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
}

