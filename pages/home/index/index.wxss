/* pages/home/mine/mine.wxss */

.container {
  background: rgba(247, 248, 250, 1);
  position: relative;
  padding-bottom: 170rpx;
  overflow-y: scroll;
}

/*浮层*/

.layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
}

.layer-bg {
  height: 444rpx;
  width: 100%;
  z-index: -1;
}

/*面板*/

.panel-top {
  width: 690rpx;
  margin: 0 auto;
  position: relative;
}

.top-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/*信息行*/

.info-line {
  justify-content: space-between;
  margin-top: 42rpx;
  position: relative;
}

.setting-img{
  position: absolute;
  top: 0;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
}

/*头像*/

.avatar-img {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  border: 4rpx solid #f0cc9d;
  background: black;
  margin: auto;
  display: block;
  overflow: hidden;
}

/*会员等级*/

.rank-txt {
  color: #ffd428;
  font-size: 32rpx;
  margin-left: 4rpx;
}

/*导航图标*/

.nav-icon {
  color: white;
  font-size: 40rpx;
}

/*链接行*/

.link-line {
  margin: 0;
  justify-content: space-between;
  z-index: 2;
  font-size: 24rpx;
  color: #f0cc9d;
  text-align: center;
}

.account-txt {
  border-right: 2rpx dashed #545765;
  width: 50%;
  white-space: normal;
  word-wrap: break-word;
  color: #f0cc9d;
}

.phone-txt {
  width: 50%;
  white-space: normal;
  word-wrap: break-word;
  color: #f0cc9d;
}

