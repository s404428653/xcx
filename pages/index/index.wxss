/*背景*/

.login-register-bg {
  width: 100%;
  display: block;
  height: 100%;
  position: relative;
}

/*浮层*/

.layer {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

/*注册框上*/

.reg-top {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding-left: 64rpx;
}

.reg-w1 {
  font-size: 64rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.reg-w2 {
  margin-top: 20rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 300;
  color: rgba(255, 255, 255, 1);
}

.reg-w3 {
  margin-left: 98rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #ff1414;
}

/*注册框下*/

.reg-below {
  width: 100%;
  flex: 2;
}

.reg-input {
  margin: 80rpx auto 0 auto;
  width: 622rpx;
  height: 104rpx;
  background: rgba(228, 228, 228, 1);
  opacity: 0.74;
  border-radius: 88rpx;
  font-size: 32rpx;
  padding-left: 34rpx;
}

.nav-line {
  margin: 10rpx auto 0 auto;
  width: 542rpx;
  justify-content: space-between;
  color: #fff;
}

.reg-btn {
  margin: 80rpx auto 0 auto;
  width: 622rpx;
  height: 104rpx;
  background: rgba(228, 228, 228, 1);
  border-radius: 88rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  line-height: 104rpx;
  color: rgba(0, 0, 0, 1);
}

.tel-arrow {
  width: 0;
  height: 0;
  margin-top: 12rpx;
  border: 10rpx solid transparent;
  border-top-color: #000;
  margin-right: 20rpx;
}

.tel-input {
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
  flex: 1;
}

.del-icon {
  width: 24rpx;
  height: 24rpx;
  font-size: 20rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 50%;
  opacity: 0.71;
  margin-right: 30rpx;
  text-align: center;
}

.bg-yelw {
  background: rgba(255, 212, 40, 1);
}

/*密码提示图标*/

.pwd-icon {
  width: 42rpx;
  height: 16rpx;
  margin-right: 40rpx;
}

/*协议提示文字*/

.tip3 {
  color: #000;
  font-size: 24rpx;
  margin-top: 36rpx;
  text-align: center;
}

.pswd-icon-box {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}